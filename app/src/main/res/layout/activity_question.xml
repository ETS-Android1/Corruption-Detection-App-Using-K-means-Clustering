                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/disagree4"
                android:text="Disagree"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/neutral4"
                android:text="Neutral"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/agree4"
                android:text="Agree"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sagree4"
                android:text="Strongly Agree"></RadioButton>

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/no_5"
            android:text="He totally deserves this post"
            android:layout_below="@id/group4"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_margin="10dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/group5"
            android:orientation="vertical"
            android:layout_below="@id/no_5"
            android:layout_marginTop="10dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sdisagree5"
                android:text="Strongly Disagree"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/disagree5"
                android:text="Disagree"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/neutral5"
                android:text="Neutral"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/agree5"
                android:text="Agree"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sagree5"
                android:text="Strongly Agree"></RadioButton>

        </RadioGroup>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit_evaluation"
            android:text="SUBMIT"
            android:layout_below="@id/group5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_background"/>

    </RelativeLayout>

</ScrollView>